{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "avoid-throw": "off",
    "not-rely-on-time": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": [
      "error",
      "0.8.1"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}